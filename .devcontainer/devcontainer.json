{
  "name": "cpp-runner-for-atcoder",
  "dockerComposeFile": ["./compose.yml"],
  "service": "cpp-runner-for-atcoder",
  "workspaceFolder": "/cpp-runner-for-atcoder",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "edonet.vscode-command-runner",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "[cpp]": {
          "editor.defaultFormatter": "ms-vscode.cpptools"
        }
      }
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /cpp-runner-for-atcoder/ ;",
  "remoteUser": "vscode"
}
